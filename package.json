{
  "name": "justheckinwrite",
  "version": "0.0.1",
  "description": "Distraction-free cross-platform writing. Just h*ckin write, for crying out loud.",
  "main": "index.js",
  "scripts": {
    "test": "electron .",
    "start": "electron-forge start",
    "debug": "DEBUG=true electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chadondata/jhw.git"
  },
  "keywords": [
    "Writing",
    "ElectronJS",
    "Node",
    "NoNipnops"
  ],
  "author": "Chad A Harper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chadondata/jhw/issues"
  },
  "homepage": "https://github.com/chadondata/jhw#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^14.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "simplemde": "^1.11.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "justheckinwrite"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
